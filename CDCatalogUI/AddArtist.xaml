<Window x:Class="CDCatalogUI.AddArtist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add An Artist" Height="140" Width="230">
    <Grid>
        <Label Content="Artist Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtArtistName" HorizontalAlignment="Left" Height="23" Margin="10,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="btnAddArtistGo" Content="Add Artist" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="75" Click="btnAddArtistGo_Click" />
        <Button x:Name="btnAddArtistCancel" Content="Cancel" HorizontalAlignment="Left" Margin="120,70,0,0" VerticalAlignment="Top" Width="75" Click="btnAddArtistCancel_Click" />

    </Grid>
</Window>
