<Window x:Class="CDCatalogUI.AddGenre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add A Genre" Height="140" Width="230">
    <Grid>
        <Label Content="Genre Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtGenreName" HorizontalAlignment="Left" Height="23" Margin="10,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="btnAddGenreGo" Content="Add Genre" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="75" Click="btnAddGenreGo_Click"/>
        <Button x:Name="btnAddGenreCancel" Content="Cancel" HorizontalAlignment="Left" Margin="120,70,0,0" VerticalAlignment="Top" Width="75" Click="btnAddGenreCancel_Click"/>

    </Grid>
</Window>
